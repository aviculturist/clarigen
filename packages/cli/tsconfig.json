{
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["dom", "esnext"],
    "target": "ES2020",
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "noEmit": false,
    "esModuleInterop": true,
    "paths": {
      "@clarigen/cli": ["src/index"]
    }
  },
  "include": ["./src/index.ts", "./src/**/*"]
}
