{
  "name": "@clarion/cli",
  "description": "A CLI for generating a Typescript interface for a Clarity contract.",
  "author": "Hank Stoever",
  "version": "1.0.8",
  "license": "MIT",
  "main": "dist/index.js",
  "files": [
    "dist",
    "src",
    "/oclif.manifest.json"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "ts-node-script src/start.ts",
    "compile": "ncc build src/index.ts --no-source-map-register -e @oclif/command -e @oclif/errors",
    "build-single-file": "yarn compile && oclif-dev readme",
    "build": "tsdx build && oclif-dev readme",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "typecheck": "tsc --noEmit"
  },
  "bin": {
    "clarion": "./bin/run"
  },
  "peerDependencies": {},
  "oclif": {
    "commands": "./dist/commands",
    "bin": "clarion"
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "devDependencies": {
    "@oclif/config": "^1.17.0",
    "@oclif/dev-cli": "^1.26.0",
    "@oclif/errors": "^1.3.4",
    "@vercel/ncc": "0.27.0",
    "chokidar": "3.5.1",
    "oclif": "^1.16.1",
    "ts-node": "^9.1.1"
  },
  "dependencies": {
    "@clarion/proxy": "link:../proxy",
    "@oclif/command": "^1.8.0",
    "chalk": "4.1.0",
    "ora": "5.4.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
